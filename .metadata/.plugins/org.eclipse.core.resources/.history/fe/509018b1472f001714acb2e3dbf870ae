package synchronizedKeyWord2;

public class App {
	public int count;

	public static void main(String[] args) {
		App app = new App();
		app.doWork();
		System.out.println(app.count);
	}

	public void doWork() {
		Thread t1 = new Thread(new Runnable() {

			@Override
			public void run() {
				for(int i = 0; i < 1000; i++) {
					count++;
				}
			}

		});
		
		Thread t2 = new Thread(new Runnable() {

			@Override
			public void run() {
				for(int i = 0; i < 1000; i++) {
					count++;
				}
			}

		});
		t1.start();
		t2.start();
		
	}
}
